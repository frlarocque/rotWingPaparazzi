<!DOCTYPE module SYSTEM "module.dtd">

<module name="airspeed_wind_estimator_EKF" dir="meteo">
  <doc>
    <description>
      Airspeed and Wind Estimator with EKF 
      Frédéric Larocque
    </description>
    <define name="PERIODIC_FREQUENCY_AIRSPEED_EKF" value="20" description="Airspeed periodic frequency"/>
    <define name="PERIODIC_FREQUENCY_AIRSPEED_EKF_FETCH" value="50" description="Airspeed periodic fetch frequency"/>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings name="Airspeed_EKF">
        <dl_setting MAX="1" MIN="0" STEP="0" values="FALSE|TRUE" module="modules/meteo/airspeed_wind_estimator_EKF" VAR="reset_filter" shortname="reset_filter"/>
        </dl_settings>
    </dl_settings>
  </settings>
  <header>
    <file name="airspeed_wind_estimator_EKF_wrapper.h"/>
  </header>
  <init fun="airspeed_wind_estimator_EKF_wrapper_init()"/>
  <periodic fun="airspeed_wind_estimator_EKF_wrapper_periodic()" freq="20."  autorun="TRUE"/>
  <periodic fun="airspeed_wind_estimator_EKF_wrapper_fetch()" freq="50."  autorun="TRUE"/>
  <makefile target="ap|nps">
    <file name="airspeed_wind_estimator_EKF.cpp"/>
    <file name="airspeed_wind_estimator_EKF_wrapper.c"/>
    <define name="EIGEN_NO_MALLOC"/>
    <define name="EIGEN_NO_AUTOMATIC_RESIZING"/>
    <include name="../ext/eigen"/>
  </makefile>
</module>

